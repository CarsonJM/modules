nextflow_process {

    name "Test Process MEGAHIT_CONTIG2GFA"
    script "../main.nf"
    process "MEGAHIT_CONTIG2GFA"

    tag "modules"
    tag "modules_nfcore"
    tag "megahit"
    tag "megahit/contig2gfa"

    test("sarcov2 - fasta") {
        when {
            process {
                """
                input[0] = [
                    [id:"test", single_end:true],
                    file("${projectDir}/assets/test-datasets/genomics/sarscov2/illumina/fasta/test.megahit.contigs.fa.gz", checkIfExists: true)
                ]
                """
            }
        }
        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }

    test("stub") {
        options "-stub"
        when {
            process {
                """
                input[0] = [
                    [id:"test", single_end:true],
                    file("${projectDir}/assets/test-datasets/genomics/sarscov2/illumina/fasta/test.megahit.contigs.fa.gz", checkIfExists: true)
                ]
                """
            }
        }
        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
}
